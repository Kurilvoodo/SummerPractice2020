@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <link href="~/Styles/Login.css" rel="stylesheet" />
</head>
<body>
    <div class="content">
        <div class="container-for-buttons">
            <h1 class="h1-login">Invalid username or password. Try again</h1>
            <form action="~/Pages/Login/SignIn.cshtml">
                <button type="submit" class="button-sign-in">Sign in</button>
            </form>
            <form action="~/Pages/Login/SignUp.cshtml" method="post" enctype="multipart/form-data">
                <button type="submit" class="button-sign-up">Sign up</button>
            </form>
        </div>
    </div>
</body>
</html>
